{
  "root": true,
  "extends": ["plugin:github/browser", "plugin:github/recommended", "plugin:github/typescript"],
  "overrides": [
    {
      "files": "*.js",
      "parser": "espree",
      "parserOptions": {"ecmaVersion": 8}
    },
    {
      "files": "test/test.js",
      "rules": {
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "github/no-inner-html": "off"
      }
    }
  ]
}
